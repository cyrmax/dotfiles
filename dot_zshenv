# ~/.zshenv
#
# Loaded on ALL zsh invocations. For environment variables.

# Source the common environment variables
if [[ -f ~/.shell-envvars ]]; then
  source ~/.shell-envvars
fi

# Zsh-specific history settings
export HISTFILE=~/.zsh_history
export HISTSIZE=10000
export SAVEHIST=10000
# Zsh options: ignore duplicates, don't save commands starting with a space
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt BEEP

