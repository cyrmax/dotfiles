# General shell behavior
export HISTSIZE=5000
export HISTFILESIZE=10000
export HISTCONTROL=ignoredups:ignorespace

# PATH modifications
export PATH="$HOME/.local/bin:$HOME/bin:$HOME/.bin:$PATH"

# Tools preferences
export EDITOR=nvim
export VISUAL=nvim
export PAGER="nvim -R"
export MANPAGER="nvim +Man!"
export MANWIDTH=999 # I don't know for what but people recommend along with nvim as manpager
export GIT_EDITOR=nvim

# Language specific paths (not necessary present)
# GoLang
export GOPATH="$HOME/go"
export PATH="$GOPATH/bin:$PATH"
# Rust, Cargo and RustUp
export RUSTUP_HOME="$HOME/.rustup"
export CARGO_HOME="$HOME/.cargo"
export PATH="$CARGO_HOME/bin:$PATH"

# XDG-related stuff. Not tested, not needed, but smart people do recommend
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"

# Other
export INPUTRC="$HOME/.inputrc"

